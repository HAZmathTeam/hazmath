#
# Makefile for convection diffusion program
#
FC = f77
#FFLAGS = -g #-O
FFLAGS = -O3

mainsol    = solv.o the_mg.o
mainsol_m  = solv_multi.o the_mg.o

OBJS0 = rw.o\
        gs.o\
        newtools.o\
        mattools.o\
        permu.o\
        transp.o\
        sgauss.o

solv     : $(mainsol) $(OBJS0)
	$(FC) $(FFLAGS) -o solv $(mainsol) $(OBJS0)

solv_multi    : $(mainsol_m) $(OBJS0)
	$(FC) $(FFLAGS) -o solv_multi $(mainsol_m) $(OBJS0)

clean:
#	rm solv solv_multi
	rm *.o

